<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_margin="@dimen/offset_1"
    android:layout_height="wrap_content"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/offset_1"
        android:layout_margin="@dimen/offset_1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTitleItemJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/offset_1"
            android:layout_marginEnd="@dimen/offset_1"
            android:textSize="@dimen/size_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Android Developer" />

        <View
            android:id="@+id/dividerItemJob"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/offset_1"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintTop_toBottomOf="@id/txtTitleItemJob" />

        <ImageView
            android:id="@+id/imgCompanyItemJob"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="@dimen/offset_1"
            android:contentDescription="@null"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dividerItemJob"
            tools:src="@drawable/sharenow" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>


